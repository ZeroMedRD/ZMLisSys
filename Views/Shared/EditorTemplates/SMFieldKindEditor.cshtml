@using System.Collections
@using Kendo.Mvc.UI

@(Html.Kendo().DropDownListFor(m => m)
    .DataTextField("CBDDescription")
    .DataValueField("CBDCode")
    .ValuePrimitive(true)
    .Filter("contains")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("GetCombo", "LisSchema", new { stext = "ZMLisSys_SMFieldKind" });
        }).ServerFiltering(false);
    }).Enable(true).HtmlAttributes(new { @class= "formfont" }))
