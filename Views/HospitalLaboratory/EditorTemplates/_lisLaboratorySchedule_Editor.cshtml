            </tr>
            <tr>
                <td>主機連線位置</td>
                <td colspan="4">@Html.Kendo().TextBoxFor(model => model.LLSTcpIp).HtmlAttributes(new { style = "width: 100%; max-width: 700px !important;" }) </td>
            </tr>
            <tr>
                <th style="text-align:center">登入帳號１</th>
                <th style="text-align:center">登入帳號２</th>
                <th style="text-align:center">登入帳號３</th>
                <th style="text-align:center" colspan="2">登入密碼</th>
            </tr>
            <tr>
                <td>@Html.Kendo().TextBoxFor(model => model.LLSLogin01).HtmlAttributes(new { style = "width: 100%; max-width: 700px !important;" }) </td>
                <td>@Html.Kendo().TextBoxFor(model => model.LLSLogin02).HtmlAttributes(new { style = "width: 100%; max-width: 700px !important;" }) </td>
                <td>@Html.Kendo().TextBoxFor(model => model.LLSLogin03).HtmlAttributes(new { style = "width: 100%; max-width: 700px !important;" }) </td>
                <td colspan="2">
                    @Html.Kendo().TextBoxFor(model => model.LLSPassword).HtmlAttributes(new { type = "password", style = "width: 100%; max-width: 700px !important;" })
                </td>
            </tr>
            <tr>
                <td>API連接指令</td>
                <td colspan="4">@Html.Kendo().TextBoxFor(model => model.LLSAPIUrl).HtmlAttributes(new { style = "width: 100%; max-width: 700px !important;" }) </td>
            </tr>
            <tr>
                <th style="text-align:center">排程執行時間一</th>
                <th style="text-align:center">排程執行時間二</th>
                <th style="text-align:center">排程執行時間三</th>
                <th style="text-align:center">排程執行時間四</th>
                <th style="text-align:center">排程執行時間五</th>
            </tr>
            <tr>
                <td>@(Html.Kendo().TimePickerFor(model => model.LLSTime01).Interval(10).HtmlAttributes(new { style = "width: 100%;color:black;" }).Format("HH:mm:ss"))</td>
                <td>@(Html.Kendo().TimePickerFor(model => model.LLSTime02).Interval(10).HtmlAttributes(new { style = "width: 100%;color:black;" }).Format("HH:mm:ss"))</td>
                <td>@(Html.Kendo().TimePickerFor(model => model.LLSTime03).Interval(10).HtmlAttributes(new { style = "width: 100%;color:black;" }).Format("HH:mm:ss"))</td>
                <td>@(Html.Kendo().TimePickerFor(model => model.LLSTime04).Interval(10).HtmlAttributes(new { style = "width: 100%;color:black;" }).Format("HH:mm:ss"))</td>
                <td>@(Html.Kendo().TimePickerFor(model => model.LLSTime05).Interval(10).HtmlAttributes(new { style = "width: 100%;color:black;" }).Format("HH:mm:ss"))</td>
            </tr>
        </table>


