@using System.Collections
@using Kendo.Mvc.UI

@(Html.Kendo().DropDownListFor(m => m)
    .Name("LLIRowid")
    .DataTextField("LLITrdCName")
    .DataValueField("LLIRowid")
    .AutoWidth(true)
    .ValuePrimitive(true)
    .Filter("contains")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("GetLLIRowid", "GetData");
        }).ServerFiltering(false);
    }).Enable(true).HtmlAttributes(new { @class= "formfont" }))
